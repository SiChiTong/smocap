<?xml version="1.0"?>
<launch>
  <arg name="use_sim_time" default="true" />
  <arg name="gui" default="true" />
  <arg name="headless" default="false" />
  
  <!-- Launch Gazebo with the default world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="0" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="use_sim_time" value="$(arg use_sim_time)" />
    <arg name="headless" value="$(arg headless)" />
  </include>

  <!-- Spawn marker -->
  <param name="marker_description" command="$(find xacro)/xacro --inorder $(find smocap)/urdf/hog_ir_marker.urdf.xacro" />
  
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
	args="-urdf -model marker -param marker_description" />


  <node pkg="tf" type="static_transform_publisher" name="world_to_irm_link_publisher"
	args="0.5 0 0.1 0 0 0.5 world irm_link_desired 100"/>

  
  <!-- <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"> -->
    <!--<param name="robot_description" value="$(arg marker_description)"/>-->
<!--    <remap from="robot_description" to="marker_description"/>
  </node> -->

  
</launch>
